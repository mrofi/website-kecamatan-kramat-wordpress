@media only screen and ( min-width: 981px ) {

	/*HOMEPAGE*/
	#header-homepage {
	    background-image: url(/images/homepage_header_background.jpg);
	    background-position: 100% 100%;
	    background-repeat: no-repeat;
	    min-height: 500px;
	}

	#header-mobile-homepage {
		display: none;
	}

	.et_fullwidth_nav #main-header .container {
		padding-left: 0!important;
		padding-right: 0!important;
	}

	.logo_container {
		padding: 10px!important;
		/*margin-bottom: 30px;*/
	}

	.logo_container .logo {
	    position: absolute;
	    left: 10%;
	}

	.logo_container .header-title {
	    display: inline-block;
	}

	.header-title h4 {
	    font-size: 2em;
	}

	.header-title address {
	    display: block;
	}

	.et-fixed-header .header-title address {
	    display: none;
	}

	.et-fixed-header .logo_container .logo {
	    height: 80px;
	}

	/*MENU*/
	.nav ul li a:hover, .nav ul li ul li a:hover, li.current-menu-item > a {
	    color: #eeee22!important;
	}

	/*SEARCH*/
	.et_header_style_centered .et-fixed-header .et-search-form input, .et_header_style_centered .et-fixed-header span.et_close_search_field {
		top: 50%;
	}

	/*NEWSTICKER*/
	.newsticker {
		margin-top: -5px;
		display: block;
	}

	/*center in mobile*/
	.center-in-mobile ul, .center-in-mobile {
		text-align: left;
	}
}

