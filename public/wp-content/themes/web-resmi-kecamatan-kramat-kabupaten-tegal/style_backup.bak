/*------------------------------------------------*/

/* center in mobile for menu / li */

.center-in-mobile ul, .center-in-mobile {
	width: 100%!important;
	text-align: center;
	margin: 0 0 0 0 ;
}
.center-in-mobile ul li, .center-in-mobile li {
	float: none;
	display: inline-block;
}









/*WIDGET*/
.et_mobile_menu {
    background-color: rgba(48, 48, 48, 0.9);
}

.et_mobile_menu li a:hover, li.current-menu-item > a {
    color: #eeee22!important;
}

.et_pb_module .et_pb_widget.et_pb_new_widget {
    width: 100%!important;
    margin: 0!important;
}

#menu-home-submenu {
	padding: 0;
}

#menu-home-submenu li {
    list-style: none;
}

#menu-home-submenu li {
    text-align: center;
    display: inline-block;
    padding: 0 10px;
}

#menu-home-submenu li a > i {
    display: block;
    font-size: 2em;
}

.widget_search input#searchsubmit {
	color: #fff;
	background-color: #688F00;
}

